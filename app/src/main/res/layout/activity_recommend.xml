<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".ui.RecommendActivity">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天去哪玩"

            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="14dp"/>

    <LinearLayout
        android:padding="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="160dp"

        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="2dp"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:padding="2dp"


                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:id="@+id/rcm_img1"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/sqw"/>
                <TextView
                    android:textSize="18sp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_gravity="bottom"
                    android:id="@+id/rad_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摩天夜景"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:padding="2dp"


                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:id="@+id/rcm_img2"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/sunset"/>
                <TextView
                    android:textSize="12sp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_gravity="bottom"
                    android:id="@+id/rad_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夕阳最美观景点"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/hog">
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:padding="2dp"

        android:layout_height="160dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp"
            >
            <androidx.cardview.widget.CardView


                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:cardCornerRadius="10dp"
                >

                <ImageView
                    android:id="@+id/rcm_img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/flower" />

                <TextView
                    android:textSize="12sp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_gravity="bottom"
                    android:id="@+id/rad_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="芬芳玫瑰园"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:padding="@dimen/dp_4"


                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:id="@+id/rcm_img4"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/tree"/>
                <TextView
                    android:textSize="12sp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_gravity="bottom"
                    android:id="@+id/rad_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奇遇五棵松"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:padding="@dimen/dp_4"


                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:id="@+id/rcm_img5"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hog4"/>
                <TextView
                    android:textSize="12sp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_gravity="bottom"
                    android:id="@+id/rad_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="东方之星"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/hog">
        </LinearLayout>



    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginStart="14dp"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:text="精品路线推荐"
            />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/parent_recycler_view"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"/>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</LinearLayout>