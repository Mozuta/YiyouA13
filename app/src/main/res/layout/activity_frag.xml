<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sidemenu"
    tools:context=".FragAct">


    <ImageView
        android:id="@+id/iv_1"

        android:layout_width="330dp"
        android:layout_height="240dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/look"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="@dimen/dp_4"
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="请输入您的手机号"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="@dimen/dp_4"
        android:text="请输入您的验证码"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_1" />

    <EditText

        android:layout_marginTop="@dimen/dp_4"
        android:id="@+id/et_1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/phone"
        android:drawablePadding="5dp"

        android:gravity="center|left"
        android:hint="手机号"
        android:maxLines="1"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="@dimen/dp_4"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/et_2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_1"
        android:background="@drawable/phone"
        android:drawablePadding="5dp"
        android:layout_marginTop="@dimen/dp_4"

        android:hint="验证码"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <CheckBox
        android:id="@+id/cb_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_2"
        android:text="记住信息"
        android:layout_marginRight="56dp"

        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/loginbt"
        app:layout_constraintEnd_toStartOf="@+id/check_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_2" />

    <Button
        android:text="发送验证码"
        android:id="@+id/check_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/loginbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_2"
        android:layout_marginEnd="54dp"/>


    <Button

        android:id="@+id/loginbt"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="--      启程      --"
        android:textSize="30sp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_2" />
</androidx.constraintlayout.widget.ConstraintLayout>