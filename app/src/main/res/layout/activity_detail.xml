                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inner_title" />

                <TextView

                    android:id="@+id/inner_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/banner" />

                <TextView
                    android:id="@+id/inner_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inner_content" />

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/materialRatingBar"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inner_time" />

                <TextView
                    android:id="@+id/inner_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inner_content" />

                <TextView
                    android:id="@+id/inner_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="like"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inner_content" />

                <TextView
                    android:id="@+id/inner_comment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="comment"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materialRatingBar" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/inner_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inner_comment_title" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/comment_btn_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="说点什么吧~" />

        <com.like.LikeButton
            android:layout_marginStart="6dp"
            android:id="@+id/likeButton"

            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            app:anim_scale_factor="7"
            app:circle_end_color="@color/purple_500"
            app:circle_start_color="@color/purple_200"
            app:dots_primary_color="@color/purple_500"
            app:dots_secondary_color="@color/purple_700"
            app:icon_size="8dp"
            app:icon_type="Star"
            app:like_drawable="@drawable/thumb_on"
            app:liked="false"
            app:unlike_drawable="@drawable/thumb_off"

            />

        <TextView
            android:layout_marginStart="6dp"
            android:id="@+id/like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35" />

        <com.like.LikeButton
            app:icon_size="8dp"
            android:layout_marginStart="6dp"
            android:id="@+id/follow_btn_small"
            app:anim_scale_factor="7"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            app:icon_type="star"
            app:liked="false" />

        <TextView
            android:layout_marginStart="6dp"
            android:id="@+id/follow_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15" />

        <ImageButton
            android:layout_marginStart="6dp"
            android:id="@+id/comment_btn_small"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/hog" />

        <TextView
            android:layout_marginStart="6dp"
            android:id="@+id/comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>